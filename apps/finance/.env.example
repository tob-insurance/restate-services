# Database Connection Strings
POSTGRES_URL=postgresql://postgres:your_password@localhost:5432/finance?schema=financial_report
ORACLE_URL=oracle://your_oracle_user:your_oracle_password@localhost:1521/ORCL

# Optional: Oracle Instant Client Path (for macOS/Windows)
# ORACLE_INSTANT_CLIENT_PATH=/path/to/instantclient

# Scheduler Configuration
# Time when daily closing should run (24-hour format HH:mm)
DAILY_CLOSING_SCHEDULE_TIME=00:00

# Timezone for scheduling (IANA timezone format)
TZ=Asia/Jakarta

# Default user ID for workflow operations
DEFAULT_USER_ID=adm

# Genius Job Configuration (optional - defaults shown)
# GENIUS_INITIAL_DELAY_HOURS=5
# GENIUS_POLL_INTERVAL_HOURS=1
# GENIUS_MAX_POLL_ATTEMPTS=7

# Examples:
# Midnight: DAILY_CLOSING_SCHEDULE_TIME=00:00
# 2:30 AM: DAILY_CLOSING_SCHEDULE_TIME=02:30
# 6:00 PM: DAILY_CLOSING_SCHEDULE_TIME=18:00
