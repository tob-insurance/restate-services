# Database Connection Strings
# @required @sensitive @type=url
POSTGRES_URL=

# @required @sensitive @type=url
ORACLE_URL=

# Optional: Oracle Instant Client Path (for macOS/Windows)
# @required=false
ORACLE_INSTANT_CLIENT_PATH=

# Scheduler Configuration
# Time when daily closing should run (24-hour format HH:mm)
# @type=string(matches='^([01]?[0-9]|2[0-3]):[0-5][0-9]$')
DAILY_CLOSING_SCHEDULE_TIME=00:00

# Timezone for scheduling (IANA timezone format)
# @type=string
TZ=Asia/Jakarta

# Default user ID for workflow operations
# @type=string
DEFAULT_USER_ID=adm

# Genius Job Configuration
# Initial delay before first status check (in hours)
# @type=number
GENIUS_INITIAL_DELAY_HOURS=5

# Interval between status checks (in hours)
# @type=number
GENIUS_POLL_INTERVAL_HOURS=1

# Maximum number of status check attempts
# @type=number
GENIUS_MAX_POLL_ATTEMPTS=7
